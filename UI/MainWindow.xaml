<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:uc="clr-namespace:UI.UserControls"
        Height="830" Width="1250" ResizeMode="NoResize" Background="Transparent"
        AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen" Icon="/MR.Clone.png">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooltoVis"/>
    </Window.Resources>
    
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="55"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!--background-->


		<Border CornerRadius="0 20 20 0" Background="#f8f7fc" Grid.Column="2" Grid.ColumnSpan="2" Margin="0 0 0 0 " Grid.RowSpan="2" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown"/>
		<!-- left menu1-->
		<Border CornerRadius="20" Grid.RowSpan="2" Panel.ZIndex="2" Background="#6145e3">
			<!--App Tile-->
			<Grid>
				<TextBlock Text="MR.Clone App" Foreground="#ffffff" FontSize="16" VerticalAlignment="Top"
                           HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0 30 0 0">
					<TextBlock.LayoutTransform>
						<RotateTransform Angle="90"/>
					</TextBlock.LayoutTransform>
				</TextBlock>

				<!--Account Button-->

				<StackPanel Margin="0 170 0 0">
					<!--<uc:AccountMenuButton Title="A" GradientColor1="#d1abff" GradientColor2="#b07bff"/>
                    <uc:AccountMenuButton Title="B" GradientColor1="#fba0cb" GradientColor2="#fe7094"/>
					<uc:AccountMenuButton Title="C" GradientColor1="#e5db6f" GradientColor2="#e2c649"/>-->
				</StackPanel>
			</Grid>
		</Border>

		<!--left menu2-->
		<Border Grid.Column="1" Grid.RowSpan="2" CornerRadius="0 20 20 0" Background="#6f50ff" Panel.ZIndex="1" Margin="-25 0 0 0">
            <Grid>
                <!--Top Combobox-->
                <ComboBox Style="{DynamicResource ComboBoxStyle1}" VerticalAlignment="Top" Margin="25 45 0 0">
                    <ComboBoxItem Content="Produced By" IsSelected="True"/>
                    <ComboBoxItem Content="Moeen Rashidi"/>
                    <ComboBoxItem Content="Hossein Gholizadeh"/>
                    <ComboBoxItem Content="MohammadReza Khodarahmi"/>
                    <ComboBoxItem Content="AmirHossein Maleki"/>
                </ComboBox>

                <!--Menu Buttons-->
                <StackPanel Margin="25 160 0 0">
                    <uc:MenuButtons Title="Home" Icon="HomeOutline" IsActive="True"/>
                    <uc:MenuButtons Title="Videos" Icon="Video"/>
                    <uc:MenuButtons Title="Music" Icon="Music"/>
                    <uc:MenuButtons Title="Images" Icon="Image"/>
                </StackPanel>

                <!--Bottom Menu Buttons-->
                <StackPanel Margin="25 0 0 40" VerticalAlignment="Bottom">
                    <uc:MenuButtons Title="Setting" Icon="Cog"/>
                    <uc:MenuButtons Title="LogOut" Icon="Logout"/>
                </StackPanel>

            </Grid>
        </Border>
        
        <!-- Top Section -->
        <Grid Grid.Column="2" Grid.ColumnSpan="2" Margin="40 30">
            <!--Search Textbox-->
            <Grid Width="500" HorizontalAlignment="Left">
                <ComboBox Style="{StaticResource ComboBoxStyle2}" HorizontalAlignment="Left" Margin="3 0 0 0" Panel.ZIndex="2">
                    <ComboBoxItem Content="All Category" IsSelected="True"/>
                    <ComboBoxItem Content="Videos"/>
                    <ComboBoxItem Content="Music"/>
                    <ComboBoxItem Content="Images"/>
                    <ComboBoxItem Content="Messages"/>
                </ComboBox>
                <Rectangle Width="1" Fill="#e9e9e9" Panel.ZIndex="2" Margin="130 19 0 19" HorizontalAlignment="Left"/>
                <TextBlock Margin="150 0 20 0" VerticalAlignment="Center" Foreground="#868686" Panel.ZIndex="1" IsHitTestVisible="False" Text="Search Here ..."
                           Visibility="{Binding ElementName=txtboxSearch,Path=Text.IsEmpty,Converter={StaticResource BooltoVis}}"/>
                <TextBox x:Name="txtboxSearch" Style="{StaticResource searchTextbox}"/>
                <Button HorizontalAlignment="Right" Margin="0 0 7 0" Style="{StaticResource textBoxButton}">
                    <Icon:PackIconMaterial Kind="Magnify" Foreground="#c7c7c7" />
                </Button>
            </Grid>
            
            <!--Top Menu-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource textBoxButton}">
                    <Icon:PackIconMaterial Kind="BellOutline" Foreground="#88878e"/>
                </Button>
                <Button Style="{StaticResource textBoxButton}" Background="#e9e9e9">
                    <Icon:PackIconMaterial Kind="AccountArrowLeftOutline" Foreground="#88878e"/>
                </Button>
                <Button Style="{StaticResource textBoxButton}">
                    <Icon:PackIconMaterial Kind="DotsVertical" Foreground="#88878e"/>
                </Button>
            </StackPanel>
        </Grid>
	<!--Chat Section-->
		<Border CornerRadius="15" Background="#ffffff" Grid.Column="3" Grid.Row="1" Margin="0 0 30 30" ClipToBounds="True">
			<Grid>
				<Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
				</Grid.RowDefinitions>
			
			    <!--Top Chat MenuBar-->
			    <Grid Background="#ffffff">
					<Grid.Effect>
						<DropShadowEffect BlurRadius="20" ShadowDepth="1" Direction="-90" Opacity="0.1"/>
					</Grid.Effect>
					
				    <TextBlock Text="Moonlab std" FontSize="16" Margin="20 15" HorizontalAlignment="left"/>
				    <StackPanel Orientation="Horizontal" Margin="0 0 10 0" HorizontalAlignment="Right">
						<TextBlock Text="and 3 others" VerticalAlignment="Center" Margin="7 0" Foreground="#8b8a8f" FontSize="15"/>
					    <Button Style="{StaticResource textBoxButton}">
							<Icon:PackIconMaterial Kind="DotsVertical" Width="14" Height="14" Foreground="#88878e"/>
						</Button>
					</StackPanel>
				</Grid>
			</Grid>
		</Border>
	</Grid>
</Window>
