                    <TextBlock Text="6:39 PM" Style="{StaticResource timeText}"/>

                    <uc:UserChat Username="Mohammadreza Khodarahmi" Image="/Resources/Person.png"/>

                    <uc:Messagechat Color="#68cfa3" Message="باشه معین ولی با کسی راجبش حرف نزنی ها"/>

