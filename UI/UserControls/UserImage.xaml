<UserControl x:Class="UI.UserControls.UserImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="userImage">
    <Border BorderThickness="3" BorderBrush="White" CornerRadius="50" VerticalAlignment="Center">
        <Ellipse Width="30" Height="30">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding ElementName=userImage , Path=Image}"/>
            </Ellipse.Fill>
        </Ellipse>
    </Border>
</UserControl>
